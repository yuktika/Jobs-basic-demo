                <input name="uid" value="<%=userData._id%>" hidden />
                <input name="jid" id="jid" />
            </div>
            <div class="form-group">
                <label for="title" class="col-form-label">Job Title:</label>
                <input type="text" name="jobtitle" class="form-control" id="title">
            </div>
            <!-- <div class="modal-footer"> -->
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Apply Job</button>
